<configuration scan="false" scanPeriod="5 minutes">

	<appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">

		<file>logs/primesui.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- daily rollover -->
			<fileNamePattern>logs/archived/primesui.%d{yyyy-MM-dd}.log.gz</fileNamePattern>
			<maxHistory>365</maxHistory>
		</rollingPolicy>
    <encoder>
      <pattern>%date %level [%thread] %logger{10} %msg%n</pattern>
    </encoder>
	</appender>

  <!-- PRIMESUI_DEBUG system property or environment variable -->
  <if condition='property("PRIMESUI_DEBUG").contains("true")'>
    <then>
      <logger name="fr.janalyse.primesui" level="DEBUG"/>
	  </then>
	  <else>
      <logger name="fr.janalyse.primesui" level="INFO"/>
	  </else>
	</if>
	
  <root level="ERROR">
    <appender-ref ref="FILE" />
  </root>




 <!-- ===================================================== -->
  <!-- Secondary Appenders -->
  <!-- ===================================================== -->

  <!-- Service Log (Rollover daily/50MB) -->
  <appender name="SERVICE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>logs/service.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>logs/archived/service-%d{yyyy-MM-dd}.%i</fileNamePattern>
      <timeBasedFileNamingAndTriggeringPolicy
          class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
        <maxFileSize>50MB</maxFileSize>
      </timeBasedFileNamingAndTriggeringPolicy>
    </rollingPolicy>
    <encoder>
      <pattern>%date %.-3level %-16X{transactionId} %-8X{appId} %-55X{uri} %-25logger{0} %msg%n</pattern>
    </encoder>
  </appender>

  <!-- Access Log (Rollover daily/50MB) -->
  <appender name="ACCESS" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>logs/access.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>logs/archived/access-%d{yyyy-MM-dd}.%i</fileNamePattern>
      <timeBasedFileNamingAndTriggeringPolicy
          class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
        <maxFileSize>50MB</maxFileSize>
      </timeBasedFileNamingAndTriggeringPolicy>
    </rollingPolicy>
    <encoder>
      <pattern>%msg%n</pattern>
    </encoder>
  </appender>

